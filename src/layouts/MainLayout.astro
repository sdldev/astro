---
import { Nav } from "@/components/Nav";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Loader from "@/components/Loader.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Project Node" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-site">
    <header>
      <Nav client:load />
    </header>
    <Loader />
    <main class="min-h-screen w-full flex items-center justify-center">
      <slot />
    </main>
    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Readex+Pro:wght@200;300;400;500;700&display=swap");

      body {
        background-size: cover;
        background-repeat: no-repeat;
      }
    </style>
  </body>
</html>
